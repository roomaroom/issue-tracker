!!! 5
%html
  %head
    %meta(charset="utf-8")
    %link(rel='stylesheet' href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css")
    %link(rel='stylesheet' href="/css/app.css")
    %script(src="//code.jquery.com/jquery-2.1.0.min.js")
    %script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js")
  %body
    %nav.navbar.navbar-default.navbar-static-top.navbar-inverse
      %ul.navbar-nav.nav
        %li
          %a(href="/") Home
        %li
          %a(href="/projects") Projects
        %li
          %a(href="/issues/new") New issue
    .container
      -if flash[:alert]
        .flash.bg-danger=flash[:alert]
      -if flash[:warning]
        .flash.bg-warning=flash[:warning]
      -if flash[:notice]
        .flash.bg-success=flash[:notice]

      =yield
